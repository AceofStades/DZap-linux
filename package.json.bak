{
	"name": "DZap",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"npm:frontend:dev\" \"npm:electron:dev\"",
		"frontend:dev": "cd frontend && npm run dev",
		"electron:dev": "cross-env ELECTRON_START_URL=http://localhost:5173 cd electron && npm run dev",
		"build": "cd frontend && npm run build && cd ../electron && npm run build"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.21",
		"concurrently": "^7.6.0",
		"cross-env": "^10.0.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.13",
		"wait-on": "^7.2.0"
	}
}
