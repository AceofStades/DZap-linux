{
	"name": "dzap-linux",
	"version": "1.0.0",
	"main": "electron/main.js",
	"scripts": {
		"start:frontend": "concurrently -k \"npm:dev:frontend\" \"npm:dev:electron\"",
		"dev:frontend": "cd frontend && npm run dev",
		"dev:electron": "wait-on http://localhost:3000 && cross-env GDK_BACKEND=wayland electron . --enable-features=UseOzonePlatform --ozone-platform=wayland",
		"build:frontend": "cd frontend && npm run build",
		"build:electron": "electron-builder",
		"build:app": "npm run build:frontend && npm run build:electron"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"cross-env": "^10.0.0",
		"electron": "^31.2.1",
		"electron-builder": "^24.6.4",
		"electronmon": "^2.0.2",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"node-fetch": "^2.7.0",
		"ws": "^8.18.0"
	},
	"build": {
		"appId": "com.dzap.securewipe",
		"productName": "DZap Secure Wipe",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"electron/**/*",
			"frontend/out/**/*"
		]
	}
}
